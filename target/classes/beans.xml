<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id = "Polygon" class = "com.ttn.bootcamp.springAssignment.Polygon" >
        <property name = "iPolygon" ref="Circle" />
    </bean>
    <bean id = "Circle" class = "com.ttn.bootcamp.springAssignment.Circle">
        <property name = "radius" value = "5"/>
    </bean>
    <bean id = "Square" class = "com.ttn.bootcamp.springAssignment.Square">
        <property name = "side" value = "7" />
    </bean>
</beans>