<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean class="com.ttn.bootcamp.ques1.Polygon" name="Polygon">
        <property name="circle">
            <ref bean="Circle"/>
        </property>
    </bean>
    <bean class="com.ttn.bootcamp.ques1.Circle" name="Circle">
        <property name="radius" value="7"/>
    </bean>
    <bean class="com.ttn.bootcamp.ques1.Square" name="Square">
        <property name="radius" value="8"/>
    </bean>

</beans>